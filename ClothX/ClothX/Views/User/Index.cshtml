@model IEnumerable<ClothX.DbModels.UserProfile>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				Name
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Address)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IsApproved)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IsActive)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@item.FirstName @item.LastName
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Address)
				</td>
				<td>
					@if(item.IsApproved==true)
					{
						<span>Approved</span>
					}
					else
					{
						<span>Not Apprived</span>
					}
				</td>
				<td>
					@if (item.IsActive == true)
					{
						<span>Active</span>
					}
					else
					{
						<span>Account Deleted</span>
					}
				</td>
				<td>
					@if (item.IsApproved == true)
					{
						<a class="btn btn-danger" asp-action="ApprovalStatusChange" asp-route-Id="@item.Id">Reject</a>
					}
					else
					{
						<a class="btn btn-success" asp-action="ApprovalStatusChange" asp-route-Id="@item.Id">Approve</a>
					}
					@*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
					@*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
				</td>
			</tr>
		}
	</tbody>
</table>
