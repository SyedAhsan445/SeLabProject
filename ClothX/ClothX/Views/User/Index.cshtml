@model IEnumerable<ClothX.DbModels.UserProfile>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="table-responsive">

	<table class="table data-table">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Address)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.IsApproved)
				</th>
				<th>
					Status
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@item.FirstName @item.LastName
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Address)
					</td>
					<td>
						@if (item.IsApproved == true)
						{
							<span class="chip bg-success">Approved</span>
						}
						else
						{
							<span class="chip bg-danger">Not Apprived</span>
						}
					</td>
					<td>
						@if (item.IsActive == true)
						{
							<span class="chip bg-success">Active</span>
						}
						else
						{
							<span class="chip bg-danger">Account Deleted</span>
						}
					</td>
					<td>
						@if (item.IsApproved == true)
						{
							<a class="btn btn-danger" asp-action="ApprovalStatusChange" asp-route-Id="@item.Id">Reject</a>
						}
						else
						{
							<a class="btn btn-success" asp-action="ApprovalStatusChange" asp-route-Id="@item.Id">Approve</a>
						}
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>